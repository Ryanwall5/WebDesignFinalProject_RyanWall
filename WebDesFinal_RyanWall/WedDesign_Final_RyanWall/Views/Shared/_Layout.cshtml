
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ryans Website</title>

    <link href="@Url.Content("~/Content/RyansStyleSheet.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/scripts/jquery-1.12.4.min.js"></script>
    <script src="~/scripts/jquery-ui-1.12.1.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ryan's App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand disabled" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @if (Request.IsAuthenticated)
                {
                <ul class="nav navbar-nav glyphicon">
                    <li class="dropdown">
                        <a id="drop1" href="http://getbootstrap.com/javascript/#" role="button" class="dropdown-toggle glyphicon-user" data-toggle="dropdown"> Person<span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                            <li role="presentation">
                                @Html.ActionLink("Person List", "Index", "Person")
                            </li>
                            <li role="presentation" class="divider"></li>
                            <li role="presentation">
                                @Html.ActionLink("Add Person", "Create", "Person")
                            </li>
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav glyphicon">
                    <li class="dropdown">
                        <a id="drop1" href="http://getbootstrap.com/javascript/#" role="button" class="dropdown-toggle glyphicon-shopping-cart" data-toggle="dropdown"> Shopping-List<span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                            <li role="presentation">
                                @Html.ActionLink("Shopping List", "Index", "ShoppingList")
                            </li>
                            <li role="presentation" class="divider"></li>
                            <li role="presentation">
                                @Html.ActionLink("Add Item To Shopping List", "Create", "ShoppingList")
                            </li>
                        </ul>
                    </li>
                </ul>

                <ul class="nav navbar-nav glyphicon">
                    <li class="dropdown">
                        <a id="drop1" href="http://getbootstrap.com/javascript/#" role="button" class="dropdown-toggle glyphicon-list-alt" data-toggle="dropdown"> To-Do-List<span class="caret"></span></a>

                        <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                            <li role="presentation">
                               
                                @Html.ActionLink("To-Do-List", "Index", "ToDoLists")
                               
                            </li>
                            <li role="presentation" class="divider"></li>
                            <li role="presentation">
                                @Html.ActionLink("Add Item", "Create", "ToDoLists")
                            </li>
                        </ul>
                    </li>
                </ul>
                }

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ryans Website</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
